<body>

    <!-- Navigation bar -->
    <nav class="nav2">
        <ul>
            <li><a href="/" class="navtext2">Home</a></li>
            <li><a href="/news" class="navtext2">News</a></li>
            <% if (user === 'admin') { %>
                <li><a href="/admin" class="navtext2">Admin</a></li>
            <% } %>
            <% if (user) { %>
                <li><a href="/logout" class="navtext2">Logout</a></li>
            <% } else { %>
                <li><a href="/login" class="navtext2">Login</a></li>
            <% } %>
        </ul>
    </nav>

    <!-- News section -->
    <section id="news" class="newssec">
        <h2>Latest News</h2>
        <hr><br>
        <!-- Search bar -->
        <form action="/search" method="GET">
            <input type="text" name="query" placeholder="Search news...">
            <button type="submit">Search</button>
        </form>
        <!-- News cards -->
        <div class="news-container">
            <% if (newsList.length > 0) { %>
                <% for (let i = 0; i < newsList.length; i++) { %>
                    <!-- News card -->
                    <div class="news-card">
                        <h3 class="news-title"><%= newsList[i].title %></h3>
                        <p class="news-content"><%= newsList[i].content %></p>
                        <% if (newsList[i].imageUrl) { %>
                            <img src="<%= newsList[i].imageUrl %>" alt="News Image" class="news-image">
                        <% } %>
                    </div>
                <% } %>
            <% } else { %>
                <p>No news available.</p>
            <% } %>
        </div>
        <!-- Navigation arrows -->
        <div class="navigation">
            <div class="arrows">
                <div class="arrow" onclick="prevNews()">❮</div>
                <div class="arrow" onclick="nextNews()">❯</div>
            </div>
        </div>
    </section>

    <!-- JavaScript for navigation -->
    <script>
        let currentIndex = 0;

        function prevNews() {
            if (currentIndex > 0) {
                currentIndex--;
                scrollNews();
            }
        }

        function nextNews() {
            if (currentIndex < document.querySelectorAll('.news-card').length - 1) {
                currentIndex++;
                scrollNews();
            }
        }

        function scrollNews() {
            const newsContainer = document.querySelector('.news-container');
            const newsCards = document.querySelectorAll('.news-card');
            const scrollAmount = newsCards[currentIndex].offsetLeft - newsContainer.offsetLeft;
            newsContainer.scrollTo({ left: scrollAmount, behavior: 'smooth' });
        }
    </script>

</body>
